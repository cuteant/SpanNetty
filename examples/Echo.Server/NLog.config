<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogToConsole="false"
      internalLogToConsoleError="false"
      internalLogLevel="Warn"
      >

  <variable name="logDirectory" value="${basedir}/Logs"/>
  <variable name="globalDirectory" value="${logDirectory}"/>

  <!-- Writes log messages to one or more files -->
  <targets>
    <default-wrapper xsi:type="AsyncWrapper" queueLimit="10000" timeToSleepBetweenBatches="50" batchSize="100" overflowAction="Block" />
    <default-target-parameters xsi:type="File" encoding="utf-8" concurrentWrites="true" keepFileOpen="false" archiveAboveSize="10485760" archiveNumbering="Sequence" />
    <target xsi:type="File" name="global" fileName="${globalDirectory}/${shortdate}.log"
            header="${longdate} ${machinename} ${appdomain} ${newline}"
            layout="${time} ${threadid} ${level} ${message:withException=true}"
            archiveFileName="${globalDirectory}/${shortdate}.{#####}.txt"
            />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="global" />
  </rules>
</nlog>